{% extends "CompetenceBundle::layout.html.twig" %}
{% block content %}
    <div class="header_page">
        <div class="row">
            <div class="section">
                <div class="section-text">
                    <h1>Bilan Prof </h1>
                    <p>Cette page permet de suivre la progression de vos apprenants.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container_page">
        <div class="row">
            <div class="large-6 columns">
                <select name="test">
                    {% for i in matieres %}

                        <option value="{{ i }}">{{ i }}</option>

                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="row" style="display: none;">
            <div class="large-6 columns">
                <label>
                    Choisissez une épreuve *
                    <p class="help-text" id="epreuveHelpTxt">A la sélection, génère un tableau pour chaque étudiant.</p>
                    <select id="epreuve" required aria-describedby="epreuveHelpTxt">
                        <option value=""></option>
                        <option value="BTS_SN">BTS SN</option>
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>
                    Matière
                    <select class="select2">
                        <option value="matiere">Matiere 1</option>
                        <option value="matiere2">Matiere 2</option>
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Etudiants
                    <select class="select2" multiple="multiple" id="etudiant">
                        <option value=""></option>
                        <option value="matiere2">Matiere 2</option>
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <input type="checkbox" id="checkbox" >
                <label for="checkbox" id="label_chk">Sélectionner/Déselectionner <strong>tous</strong> les étudiants.</label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>
                    Trier par note (Facultatif)
                    <select class="select2" id="note" name="note">
                        <option value="">FACULTATIF</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </label>
            </div>
        </div>
        <div class="row">
            <br>
            <div class="large-12 columns">
                <input type="submit" value="Consulter" name="Consulter" class="button">
            </div>
        </div>
        <div class="row">
            <br>
            <div class="large-12 columns">
                <input type="search" id="search" placeholder="Rechercher..."></input>
            </div>
        </div>
        <div class="row">
            <!-- Visbility de base hidden -->
            <div class="large-12 columns" id="bloc_eval" />
                <!-- Mettre un include ici de ton code pour afficher les valeurs figurant dans la database. Là, le nom de l'étudiant et les notes qui lui sont liées -->
                <table>
                    <thead>
                    <tr>
                        <th colspan="3" style="text-align: center;">@Nom de l'étudiant</th>
                    </tr>
                    <tr>
                        <th>Nom de la compétence</th>
                        <th>Note</th>
                        <th>Autoévaluation</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Maitriser les bases Visual Basic</td>
                        <td>
                            <select id="example">
                                <option value="1">A chier</option>
                                <option value="2">Toujours nul</option>
                                <option value="3">Potable</option>
                                <option value="4">Cool</option>
                                <option value="5">Dieu</option>
                            </select>
                        </td>
                        <td>
                            <select id="example2">
                                <option value="1">A chier</option>
                                <option value="2">Toujours nul</option>
                                <option value="3">Potable</option>
                                <option value="4">Cool</option>
                                <option value="5">Dieu</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Notions d'héritage en Java</td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Serialisation en C#</td>
                        <td></td>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}